<!--pages/containerHy/containerHy.wxml-->
<view class="container">
  <!-- 自定义 navigation -->
  <navBar showBack="{{componentParams.navback}}" componentLevels="{{componentParams.levels}}" bind:goBack="getComponentParams" title="妙谛瑜伽"></navBar>

  <view class="page">
    <!-- <view>当前登录角色：{{role}}</view> -->

    <!-- 首页 -->
    <hyIndex wx:if="{{activeComponentName==='hy_home'}}" bind:sendComponentParams="getComponentParams" class="cust_comp"></hyIndex>
    
    <!-- 场馆 -->
    <hyChangguan wx:if="{{activeComponentName==='hy_changguan'}}" class="cust_comp"></hyChangguan>

    <!-- 消息 -->
    <hyMsg wx:if="{{activeComponentName==='hy_msg'}}" class="cust_comp"></hyMsg>

    <!-- 个人中心 -->
    <hyMine wx:if="{{activeComponentName==='hy_mine'}}" class="cust_comp"></hyMine>

    <!-- 课程详情页 -->
    <hyKcDetail wx:if="{{activeComponentName==='hy_kcDetail'}}" bind:sendComponentParams="getComponentParams" kcid="{{componentParams.kcid}}" class="cust_comp"></hyKcDetail>

    <!-- 教练详情页 -->
    <hyCoachDetail wx:if="{{activeComponentName==='hy_coachDetail'}}" coachid="{{componentParams.coachid}}" class="cust_comp"></hyCoachDetail>
  </view>

  <!-- 自定义 tabbar" -->
  <tabBar role="{{role}}" show="{{componentParams.tabbar}}" bind:tabTap="getActiveComponentName"></tabBar>
</view>
